<%= form_for @workout do |workout_form| %>
    <%= workout_form.label :date %>
    <%= workout_form.date_field :date %>
    <br>
    <%= workout_form.label :calories_burned %>
    <%= workout_form.number_field :calories_burned %>
    <br>
    <%= workout_form.label :workout_type %>
    <%= workout_form.text_field :workout_type %>
    <br>
    <%= workout_form.label :description %>
    <%= workout_form.text_field :description %>
    <br>
    <%= workout_form.label :Client %>
    <%= workout_form.collection_select :client_id, Client.all, :id, :name, include_blank: 'Choose One' %>
    <br>
    <%= workout_form.label :Trainer %>
    <%= workout_form.collection_select :trainer_id, Trainer.all, :id, :username, include_blank: 'Choose One' %>
    <br><br>
    <%= workout_form.submit %>
    <% end %>